<UserControl x:Class="AudioSynthesiser.View.Controls.FrequencyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioSynthesiser"
             xmlns:vm="clr-namespace:AudioSynthesiser.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="320">
    <Border Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightGray" Margin="10">
            <StackPanel.Resources>
                <vm:LogFrequencyConverter x:Key="LogScaleConverter"/>
            </StackPanel.Resources>
            <Label>Frequency</Label>
            <DockPanel>
                <TextBox x:Name="FreqTextBox"  Width="100" Text="{Binding InputNumber, Mode=TwoWay, FallbackValue='500'}"
                         HorizontalAlignment="Left" TextAlignment="Right"/>
                <Label>Hz</Label>
            </DockPanel>
            <Slider x:Name="FreqSlider"  Width="300" Minimum="1" Maximum="10"
                    HorizontalAlignment="Left" Margin="0,5"
                    Value="{Binding ElementName=FreqTextBox,Path=Text, Mode=TwoWay,Converter={StaticResource LogScaleConverter}}"/>
        </StackPanel>
    </Border>
</UserControl>
