<UserControl x:Class="AudioSynthesiser.View.Controls.NumberSliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioSynthesiser"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="320">
    <Border Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightGray" Margin="10">
            <Label>Q Factor</Label>
            <TextBox x:Name="NumberTextBox" Width="100" Text="{Binding InputNumber, Mode=TwoWay, FallbackValue=1, StringFormat=N2}"
                HorizontalAlignment="Left" TextAlignment="Right"/>
            <Slider x:Name="Slider" Width="300" Minimum="0.5" Maximum="15"
                HorizontalAlignment="Left" Margin="0,5"
                Value="{Binding ElementName=NumberTextBox, Path=Text, Mode=TwoWay}"/>
        </StackPanel>
    </Border>
</UserControl>
